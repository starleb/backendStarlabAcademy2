generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model User {
  id             Int      @id @default(autoincrement())
  name           String
  nim            String   @unique
  gender         String
  programStudi   String
  phone          String
  angkatan       Int
  fakultas       String
  email          String   @unique
  photo          String
  createdAt      DateTime @default(now())
 
}

